{
   "multipart": [
       {   "when": { "OR": [
               { "facing": "north" },
               { "facing": "south" }
           ]},
           "apply": { "model": "escm:belt_grinder", "y": 90 }
       },
       {   "when": { "OR": [
               { "facing": "west" },
               { "facing": "east" }
           ]},
           "apply": { "model": "escm:belt_grinder" }
       },
       {   "when": { "up": "true" },
           "apply": { "model": "escm:cable_u" }
       }
   ]
}